extends layout

block content
    form(method="post", action="contact/send")
        h1 #{title}
        .form-group
            label Name
            input.form-control(type="text", name="name", placeholder="Your Name")
        .form-group
            label Email
            input.form-control(type="email", name="email", placeholder="Your Email")
        .form-group
            label Message
            textarea.form-control(name="message", placeholder="Your Message")
        button.btn.btn-default(type="submit") Submit
        